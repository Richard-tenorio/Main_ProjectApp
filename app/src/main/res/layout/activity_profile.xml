<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#002b6c">

    <!-- Title: Account Profile -->
    <TextView
        android:id="@+id/tvCreateAccountTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Profile"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <!-- Name Label -->
    <TextView
        android:id="@+id/tvNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvCreateAccountTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Last Name -->
    <TextView
        android:id="@+id/tvLastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="Last Name"
        android:minHeight="48dp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvNameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvFirstName"
        app:layout_constraintHorizontal_weight="1" />

    <!-- First Name -->
    <TextView
        android:id="@+id/tvFirstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:text="First Name"
        android:minHeight="48dp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvNameLabel"
        app:layout_constraintStart_toEndOf="@id/tvLastName"
        app:layout_constraintEnd_toStartOf="@id/tvMiddleName"
        app:layout_constraintHorizontal_weight="1" />

    <!-- Middle Name -->
    <TextView
        android:id="@+id/tvMiddleName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Middle Name"
        android:minHeight="48dp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvNameLabel"
        app:layout_constraintStart_toEndOf="@id/tvFirstName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1" />

    <!-- Birthdate Label -->
    <TextView
        android:id="@+id/tvBirthdateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthdate"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvFirstName"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Birthdate -->
    <TextView
        android:id="@+id/tvBirthdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MM/DD/YYYY"
        android:minHeight="48dp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvBirthdateLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Address Label -->
    <TextView
        android:id="@+id/tvAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brgy and City"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvBirthdate"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Address -->
    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="Brgy"
        android:minHeight="48dp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvAddressLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvCity"
        app:layout_constraintHorizontal_weight="1" />

    <!-- City -->
    <TextView
        android:id="@+id/tvCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="City"
        android:minHeight="48dp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvAddressLabel"
        app:layout_constraintStart_toEndOf="@id/tvAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1" />

    <!-- Username Label -->
    <TextView
        android:id="@+id/tvUsernameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvCity"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Username -->
    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:minHeight="48dp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvUsernameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email Label -->
    <TextView
        android:id="@+id/tvEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvUsername"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Email -->
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:minHeight="48dp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvEmailLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Confirm Button -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textColor="#000000"
        android:backgroundTint="#F5F50A"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
