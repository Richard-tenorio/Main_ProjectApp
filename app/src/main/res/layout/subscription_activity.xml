<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#002b6c"
        android:title="Subscription Plans"
        android:titleTextColor="#FFFFFF" />

    <!-- Selected Plan Message -->
    <TextView
        android:id="@+id/tvSelectedPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You don't have any plan"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="16dp"
        android:background="#D3D3D3"
        android:gravity="center" />

    <!-- ScrollView for Plan Options -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Plan 3 - Whole Semester Plan (Moved to Top) -->
            <LinearLayout
                android:id="@+id/box3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/successImage3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_check_circle"
                    android:contentDescription="Selected plan"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_launcher_foreground"
                        android:scaleType="centerCrop"
                        android:contentDescription="Whole Semester Plan Image" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Whole Semester Plan\nAll the Time"
                        android:textSize="16sp"
                        android:paddingStart="12dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Plan 2 - Sponsored Plan (Unchanged) -->
            <LinearLayout
                android:id="@+id/box2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/successImage2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_check_circle"
                    android:contentDescription="Selected plan"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_launcher_foreground"
                        android:scaleType="centerCrop"
                        android:contentDescription="Sponsored Plan Image" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sponsored\nOnly for Sponsored Students"
                        android:textSize="16sp"
                        android:paddingStart="12dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Plan 1 - 1 Month Plan (Moved to Bottom) -->
            <LinearLayout
                android:id="@+id/box1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/successImage1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_check_circle"
                    android:contentDescription="Selected plan"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:elevation="4dp"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_launcher_foreground"
                        android:scaleType="centerCrop"
                        android:contentDescription="1 Month Plan Image" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1 Month Plan\nAccess to core features"
                        android:textSize="16sp"
                        android:paddingStart="12dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Get Plan Button -->
    <Button
        android:id="@+id/btnGetPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Get Plan"
        android:textSize="16sp"
        android:backgroundTint="#F5F50A"
        android:textColor="#000000" />
</LinearLayout>
